<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/red</item>
        <item name="colorPrimaryDark">@color/red_dark</item>
        <item name="colorAccent">@color/red_trans</item>
        <item name="android:buttonStyle">@style/DefaultBtnBg</item>
    </style>

    <style name="DefaultBtnBg">
        <item name="android:background">@drawable/default_btn_bg</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="TextAppearance_12">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="TextAppearance_16">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="PinkTheme" parent="AppTheme">
        <item name="colorPrimary">@color/pink</item>
        <item name="colorPrimaryDark">@color/pink_dark</item>
        <item name="colorAccent">@color/pink_trans</item>
    </style>

    <style name="BlueTheme" parent="AppTheme">
        <item name="colorPrimary">@color/blue</item>
        <item name="colorPrimaryDark">@color/blue_dark</item>
        <item name="colorAccent">@color/blue_trans</item>
    </style>

    <style name="PurpleTheme" parent="AppTheme">
        <item name="colorPrimary">@color/purple</item>
        <item name="colorPrimaryDark">@color/purple_dark</item>
        <item name="colorAccent">@color/purple_trans</item>
    </style>

    <style name="GreenTheme" parent="AppTheme">
        <item name="colorPrimary">@color/green</item>
        <item name="colorPrimaryDark">@color/green_dark</item>
        <item name="colorAccent">@color/green_trans</item>
    </style>

    <style name="GreenLightTheme" parent="AppTheme">
        <item name="colorPrimary">@color/green_light</item>
        <item name="colorPrimaryDark">@color/green_light_dark</item>
        <item name="colorAccent">@color/green_light_trans</item>
    </style>

    <style name="YellowTheme" parent="AppTheme">
        <item name="colorPrimary">@color/yellow</item>
        <item name="colorPrimaryDark">@color/yellow_dark</item>
        <item name="colorAccent">@color/yellow_trans</item>
    </style>

    <style name="OrangeTheme" parent="AppTheme">
        <item name="colorPrimary">@color/orange</item>
        <item name="colorPrimaryDark">@color/orange_dark</item>
        <item name="colorAccent">@color/orange_trans</item>
    </style>

</resources>
